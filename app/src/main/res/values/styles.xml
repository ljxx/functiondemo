<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--MainActivity首页-->
    <style name="btn_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/btn_textview</item>
        <item name="android:textColor">@color/gray_black</item>
        <item name="android:padding">@dimen/px5</item>
        <item name="android:layout_margin">@dimen/px5</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_textview_selector</item>
    </style>

    <style name="cordova_activity_title">
        <item name="android:paddingLeft">@dimen/px5</item>
        <item name="android:paddingRight">@dimen/px5</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
